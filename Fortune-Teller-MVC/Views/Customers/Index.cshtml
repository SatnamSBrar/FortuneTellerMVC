@model IEnumerable<Fortune_Teller_MVC.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

@*CREATE NEW CUSTOMER*@
<p class="new-customer">
    <button type="button" class="btn btn-info create-new" onclick="location.href='@Url.Action("Create", "Customers")'">Create Category</button>
</p>

@*ROW CONTAINING CUSTOMER INFORMATION*@
<div class="row">
    @*LOOP THAT IS ABLE TO HANDLE NEW CUSTOMER ADDITIONS*@
    @foreach (var item in Model)
    {
        @*CUSTOMER*@
        <div class="col-xs-4 col-sm-4 col-md-4 customer-grid">
            <div class="thumbnail">
                <div class="caption">
                    <h4 class="grid-header">@Html.DisplayFor(modelItem => item.FirstName)&nbsp;@Html.DisplayFor(modelItem => item.LastName)</h4>
                    <div class="col-xs-6 col-sm-6 col-md-6 category">
                        <p>Age:</p>
                        <p>Month of Birth:</p>
                        <p>Favorite Color:</p>
                        <p>Number of Siblings:</p>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 response">
                        <p>@Html.DisplayFor(modelItem => item.Age)</p>
                        <p>@Html.DisplayFor(modelItem => item.BirthMonth)</p>
                        <p>@switch (item.FavoriteColor)
                        {
                            case ("0"):
                                item.FavoriteColor = "Red";
                                break;
                            case ("1"):
                                item.FavoriteColor = "Orange";
                                break;
                            case ("2"):
                                item.FavoriteColor = "Yellow";
                                break;
                            case ("3"):
                                item.FavoriteColor = "Green";
                                break;
                            case ("4"):
                                item.FavoriteColor = "Blue";
                                break;
                            case ("5"):
                                item.FavoriteColor = "Indigo";
                                break;
                            case ("6"):
                                item.FavoriteColor = "Violet";
                                break;
                        } </p>
        
                                <p>@Html.DisplayFor(modelItem => item.FavoriteColor)</p>
        
                                <p>@Html.DisplayFor(modelItem => item.NumberOfSiblings)</p>
        
                            </div>
                    @*BUTTONS FOR DETAILS, EDIT, AND DELETE*@
                    <p>
                        @Html.ActionLink("See Fortune", "Details", new { id = item.CustomerID }, new { @class = "btn btn-info", role = "button" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-info", role = "button" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID }, new { @class = "btn btn-info", role = "button" })
                    </p>
                </div>
            </div>
        </div>
    }
</div>






